@model BTT.WebMVC.Models.ViewModels.IssueViewModel

@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "Issue", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div>
        <div class="modal-header">
            <h4 class="modal-title text-dark">Create Bug</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="text-dark" aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DateCreated, new { @class = "control-label" })
                        @Html.EditorFor(model => model.DateCreated, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDueDate, new { @class = "control-label" })
                        @Html.EditorFor(model => model.EndDueDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Priority, Html.GetEnumSelectList(typeof(BTT.Domain.Models.Issues.Priority)), 
                        null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success" data-save="modal">Submit</button>
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}