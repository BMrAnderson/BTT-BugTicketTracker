@model BTT.WebMVC.Models.ViewModels.ProjectViewModel 
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "Project", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div>
        <div class="modal-header" style="background-color: #86C136">
            <h4 class="modal-title text-white">Create Project</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="text-white" aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.DateCreated)
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label"></label>
                        <input asp-for="DueDate" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-success" data-save="modal">Submit</button>
            <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}